<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_background"
    tools:context="com.fernando.myweatherapp.MainActivity">

    <RelativeLayout
        android:id="@+id/lnSearch"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">

        <AutoCompleteTextView
            android:id="@+id/edtCity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="6dp"
            android:layout_toLeftOf="@id/imgCancel"
            android:background="@drawable/edit_text_background"
            android:completionHint="Select a country"
            android:completionThreshold="3"
            android:fontFamily="@font/roboto"
            android:hint="ADD CITY..."
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            android:src="@mipmap/remove" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lnSearch"
        android:layout_alignParentBottom="true" />
</RelativeLayout>